---
import Section from "../Section.astro"
const { cv } = Astro.props;
const { skills } = cv;
---

<Section title="Skills" >
<ul>
    {
        skills.map(({name, keywords, level}) => (
            <li>
                <span>{name}</span>
            </li>
        ))
    }
</ul>
</Section>

<style>
    ul {
      display: inline-flex;
      gap: 8px;
      flex-wrap: wrap;
    }
  
    li {
      align-items: center;
      background: #eee;
      border-radius: 6px;
      color: black;
      display: flex;
      font-size: 0.8rem;
      font-weight: 500;
      gap: 4px;
      padding: 0.2rem 0.6rem;
    }
  </style>