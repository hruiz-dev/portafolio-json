---
import { basics } from "@cv";
import Section from "@/components/Section.astro";
import Mail from "../icons/Mail.astro";
import Phone from "../icons/Phone.astro";
import GitHub from "../icons/GitHub.astro";
import X from "../icons/X.astro";
import LinkedIn from "../icons/LinkedIn.astro";
import WorldMap from "../icons/WorldMap.astro";

const { name, label, image, email, phone, location, profiles } = basics;

const SOCILA_ICONS: Record<string, any> = {
    GitHub,
    LinkedIn,
    X,
};
---

<Section>
    <div class="container">
        <div class="text">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <span>
                <WorldMap />
                {location}
            </span>
            <div class="info">
                {
                    email && (
                        <a
                            href={`mailto:${email}`}
                            target="_blank"
                            rel="noopener noreferrer"
                            title={`Enviar un email a ${name} al correo ${email}`}
                        >
                            <Mail />
                        </a>
                    )
                }
                {
                    phone && (
                        <a
                            href={`tel:${email}`}
                            target="_blank"
                            rel="noopener noreferrer"
                            title={`Llamar por telefono a ${name} al numero ${phone}`}
                        >
                            <Phone />
                        </a>
                    )
                }
                {
                    profiles.map(({ network, url, username }) => {
                        const Icon = SOCILA_ICONS[network] || X;
                        return (
                            <a
                                href={url}
                                target="_blank"
                                rel="noopener noreferrer"
                                title={`Visitar el perfil de ${username} en ${network}`}
                            >
                                <Icon />
                            </a>
                        );
                    })
                }
            </div>
        </div>
        <figure>
            <img src={image} alt="Nire argazkia" />
        </figure>
    </div>
</Section>

<style>
    .container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
    }
    .info {
        display: flex;
        gap: 1rem;
        margin-top: 0.5rem;
    }

    .info a {
        color: #777;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #eee;
        padding: 4px;
        height: 32px;
        width: 32px;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

    .info a:hover {
        background: #eee;
    }

    img {
        aspect-ratio: 1 / 1;
        border-radius: 2em;
        width: 10em;
        height: 10em;
    }
    h1 {
        font-size: 2rem;
    }
    h2 {
        color: #444;
        font-size: 1.1rem;
        font-weight: 500;
        text-wrap: balance;
    }
    span {
        color: #666;
        display: flex;
        align-items: center;
        gap: 0.25rem;
        font-size: 0.85rem;
        letter-spacing: -0.05rem;
        margin-top: 0.5rem;
    }
</style>
